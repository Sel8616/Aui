<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <ViewFlipper
      android:id="@+id/asharp_swipe_container"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <GridView
        android:id="@+id/asharp_swipe_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include
        android:id="@+id/asharp_swipe_prompt"
        layout="@layout/swipe_prompt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include
        android:id="@+id/asharp_swipe_error"
        layout="@layout/swipe_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

  </ViewFlipper>

</android.support.v4.widget.SwipeRefreshLayout>
