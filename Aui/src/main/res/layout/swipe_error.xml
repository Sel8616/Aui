<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

  <ImageView
      android:id="@+id/asharp_swipe_prompt_image"
      android:layout_width="96dp"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:scaleType="fitEnd"
      android:src="@drawable/ic_swipe_error"/>

  <TextView
      android:id="@+id/asharp_swipe_prompt_text"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:layout_marginTop="20dp"
      android:layout_weight="2"
      android:drawablePadding="10dp"
      android:ellipsize="middle"
      android:gravity="center_horizontal"
      android:text="Sorry！SwipeAdapterView has broken down！\n\nhttps://github.com/Sel8616/ASharp\n\nphilshang@163.com"/>
</LinearLayout>